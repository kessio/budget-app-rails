<nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top">
  <%= image_tag 'back.png', alt: "back-arrow"%>
  <h4 class="text-white p-2">REGISTER</h4>
  <h6 class="text-white p-2">next</h6>
</nav>

<div class="mt-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name", class:"form-control py-3"%>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control py-3", placeholder: "Email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control py-3", placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control py-3", placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary btn-lg mt-3" %>
  </div>
<% end %>
</div>

