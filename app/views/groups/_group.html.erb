<div id="<%= dom_id group %>">
<%= link_to group_expenses_path(group.id), class:"text-decoration-none" do %>
<div class="col-12 bg-white py-4 d-flex flex-column px-2 mt-3">
 <div class="d-flex justify-content-between">
  <div class="">
    <%= image_tag group.icon, alt: 'icon', size: '70x94', class: "img" %>
  </div>
  <div>
    <p class="mt-3 text-black-50 fw-bolder"><%= group.name %></p>
    <p class="text-black-50"><%= group.created_at.strftime('%d %B, %Y') %></p>
  </div>
  <div class="mt-3 fw-bolder">
    $<%= group.total%>0
  </div>
 </div>
 </div>
<% end %>
</div>
